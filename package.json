{
  "name": "github-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "ts-node -C ttypescript -r tsconfig-paths/register ./index.ts",
    "dev": "export NODE_ENV=development; nodemon ./index.ts --exec 'npm run lint && ts-node -C ttypescript -r tsconfig-paths/register'",
    "test": "NODE_ENV=testing jest --verbose --ci",
    "test:int": "NODE_ENV=testing jest tests/integration-tests",
    "test:unit:app": "jest app/",
    "watch": "NODE_ENV=testing jest --watch --bail",
    "lint": "eslint \"**/*.ts\" --cache",
    "lint:fix": "npm run lint -- --fix",
    "validate:docs": "swagger-cli validate docs/endpoints.yaml"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "app/",
      "config/",
      "root.ts",
      "index.ts"
    ]
  },
  "private": true,
  "author": "Dobri Pachev",
  "license": "UNLICENSED",
  "devDependencies": {
    "@luckbox/eslint-rules": "^5.0.1",
    "@octokit/types": "^6.41.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.30",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.20.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "jest-extended": "^2.0.0",
    "jest-mock-extended": "^2.0.5",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "swagger-cli": "^4.0.4",
    "ts-essentials": "^7.0.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@octokit/core": "^4.0.4",
    "awilix": "^7.0.3",
    "body-parser": "^1.20.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "swagger-ui-dist": "^4.12.0",
    "tsconfig-paths": "^4.0.0",
    "typescript-is": "^0.17.1"
  }
}
